<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.shova.medical.activity.DoctorPersonalProfileActivity"
    tools:showIn="@layout/activity_public_doctor_profile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_doctor"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_text"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/woman" />

    <TextView
        android:id="@+id/textView_qoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView_doctor"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:text="If you can't explain it simply you don't\n understand it well enough.\n   -- Dr. Kamal Ahmed" />


    <TextView
        android:id="@+id/textView_name_doc"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_qoute"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:text="Dr. Fatema Tuz Zohra" />

    <TextView
        android:id="@+id/textView_email_doctor_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_name_doc"
        android:layout_alignStart="@+id/textView_name_doc"
        android:layout_alignTop="@+id/textView_name_doc"
        android:layout_marginTop="25dp"
        android:text="Zohra@gmail.com"
        android:textColor="#000"
        android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingLeft="50dp"
            android:layout_below="@+id/textView_qoute"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:layout_alignLeft="@+id/cardView_favorite"
                    android:layout_alignStart="@+id/cardView_favorite"
                    android:layout_below="@+id/cardView_favorite"
                    app:srcCompat="@drawable/ic_email_"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textView_email_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/image"
                    android:layout_alignLeft="@+id/textView_speciality_doc"
                    android:layout_alignStart="@+id/textView_speciality_doc"
                    android:text="mdmasum.shuvo@gmail.com" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:layout_alignLeft="@+id/cardView_favorite"
                    android:layout_alignStart="@+id/cardView_favorite"
                    android:layout_below="@+id/imageView4"
                    app:srcCompat="@drawable/ic_local_phone_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textView_phone_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/image_speciality"
                    android:layout_alignLeft="@+id/textView_email_doc"
                    android:layout_alignStart="@+id/textView_email_doc"
                    android:text="01680021468" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_speciality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:layout_alignLeft="@+id/cardView_favorite"
                    android:layout_alignStart="@+id/cardView_favorite"
                    android:layout_below="@+id/image"
                    app:srcCompat="@drawable/ic_description"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textView_speciality_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/image_speciality"
                    android:layout_toEndOf="@+id/image_speciality"
                    android:layout_toRightOf="@+id/image_speciality"
                    android:text="heart Specialist" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/cardView_favorite"
                    android:layout_alignStart="@+id/cardView_favorite"
                    android:layout_below="@+id/image"
                    app:srcCompat="@drawable/ic_description"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textView_doctor_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView_doctor"
                    android:layout_marginLeft="20dp"
                    android:text="If you can't explain it simply you don't\n understand it well enough.\n   -- Dr. Kamal Ahmed" />

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_apoint_to_doctor"
                    android:background="@drawable/button_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#FFF"
                    android:padding="12dp"
                    android:text="Apoint"/>
                <Button
                    android:id="@+id/btn_call_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:textColor="#FFF"
                    android:padding="12dp"
                    android:text="Call"/>
            </LinearLayout>
        </LinearLayout>



<include layout="@layout/view_common_loader"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
