<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/linear_item_word"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
           >

            <TextView
                android:id="@+id/textView_medicine_name_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text"
                android:layout_weight=".85"
                android:layout_marginLeft="10dp"
                android:text="@string/medicine_name"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/imageView_pronounce"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_weight=".10"
                android:padding="8dp"
                app:srcCompat="@drawable/pronunce_black_icon"
                tools:ignore="VectorDrawableCompat" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView_genric_name_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:layout_marginLeft="12dp"
                    android:text="@string/medicine_name"
                    />

                <TextView
                    android:id="@+id/textView_company_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:text="@string/medicine_name"
                    />
            </LinearLayout>

        </LinearLayout>




</RelativeLayout>