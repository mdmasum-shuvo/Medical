<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.shova.medical.activity.PublicDoctorProfileActivity"
    tools:showIn="@layout/activity_doctor_personal_profile">

    <ImageView
        android:id="@+id/imageView_doctor"
        android:layout_width="384dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_text"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/woman" />

    <TextView
        android:id="@+id/textView_qoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView_doctor"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="28dp"
        android:text="If you can't explain it simply you don't\n understand it well enough.\n " />

    <android.support.v7.widget.CardView
        android:background="@drawable/shape_text"
        android:layout_below="@id/textView_qoute"
        android:id="@+id/cardView_favorite"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_text"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="53dp"
                android:layout_marginRight="53dp"
                app:srcCompat="@drawable/addword_icon"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:paddingRight="15dp"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageView5"
                android:layout_marginEnd="34dp"
                android:layout_marginRight="50dp"
                android:text="Inbox" />
<LinearLayout
    android:id="@+id/layout_mypatient"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/image_btn_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:srcCompat="@drawable/home_icon"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/tv_btn_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image_btn_patient"
        android:layout_marginLeft="15dp"
        android:text="Patient" />
</LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView_name_doc"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_qoute"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:text="Dr. Fatema Tuz Zohra" />

    <TextView
        android:id="@+id/textView_email_doctor_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_name_doc"
        android:layout_alignStart="@+id/textView_name_doc"
        android:layout_alignTop="@+id/textView_name_doc"
        android:layout_marginTop="25dp"
        android:text="Zohra@gmail.com"
        android:textColor="#000"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cardView_favorite"
        android:layout_alignStart="@+id/cardView_favorite"
        android:layout_below="@+id/cardView_favorite"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/ic_email_"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView_email_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:text="mdmasum.shuvo@gmail.com" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cardView_favorite"
        android:layout_alignStart="@+id/cardView_favorite"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/ic_local_phone_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView_phone_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/image"
        android:layout_toRightOf="@+id/image"
        android:text="01680021468" />

    <ImageView
        android:id="@+id/image_speciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cardView_favorite"
        android:layout_alignStart="@+id/cardView_favorite"
        android:layout_below="@+id/image"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/home_icon"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView_speciality_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_speciality"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/image_speciality"
        android:layout_toRightOf="@+id/image_speciality"
        android:text="heart Specialist" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cardView_favorite"
        android:layout_alignRight="@+id/cardView_favorite"
        android:layout_below="@+id/textView_email_doctor_one"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_background"
        android:src="@drawable/ic_edit" />
</RelativeLayout>
